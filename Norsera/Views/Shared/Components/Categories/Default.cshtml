@model List<Category>
<style>
    .Categories
    {
        margin-bottom: 40px;
        
    }
    .list-group-item
    {
       margin-left: 15px;
    padding: 20px;
    }
    .list-group-item:hover
    {
        background-color: gray;
    }
</style>


<div class="Categories d-flex">
    @* <a asp-controller="Product" asp-action="List" class="list-group-item list-group-item-action">TÃ¼m kategoriler</a> *@
    <a href="/shop/list" class="list-group-item list-group-item-action">All Products</a>
        @foreach (var item in Model)
        {
            <a asp-controller="Shop" asp-action="list" asp-route-category="@item.Url" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")">@item.Name</a>
        }
</div>
