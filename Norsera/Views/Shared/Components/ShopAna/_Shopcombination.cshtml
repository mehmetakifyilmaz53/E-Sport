<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<style>
    .card {
        width: 100%;
    }

    #tuslar .slidertus {
        height: 10px;
        border-radius: 10px;
        background-color: gray;
    }
    #tuslar .active {
        background-color: black;
    }
</style>

@model Norsera.Models.ProductList
@{
    var FirstProduct = Model.Products.Find(p => p.ProductId == 1);
    var secondProduct = Model.Products.Find(p => p.ProductId == 2);
}

<div class="row">
    <div class="col-md-12">
        <div class="combination">
            <h1>Combination Section</h1>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators" id="tuslar">
                    <li data-target="#myCarousel" data-slide-to="0" class="active slidertus"></li>
                    <li data-target="#myCarousel" data-slide-to="1" class="slidertus"></li>
                    <li data-target="#myCarousel" data-slide-to="2" class="slidertus"></li>
                    @* <li data-target="#myCarousel" data-slide-to="2"></li> *@
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- Ürün Kartı 1 -->
                                    <div class="card">
                                        <div class="card-body" id="combination_card">
                                            <img src="~/img/NorseraHoodie.png" class="card-img-top" alt=" ">
                                            <h5 class="card-title">@FirstProduct.Name</h5>
                                            <p class="card-text">@FirstProduct.Describiton</p>
                                            <small class="text-muted">
                                                <i class="fa fa-turkish-lira"></i>@FirstProduct.Price
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- Ürün Kartı 2 -->
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="~/img/NorseraHoodie.png" class="card-img-top" alt=" ">
                                            <h5 class="card-title">@secondProduct.Name</h5>
                                            <p class="card-text">@secondProduct.Describiton</p>
                                            <small class="text-muted">
                                                <i class="fa fa-turkish-lira"></i>@secondProduct.Price
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- Ürün Kartı 3 -->
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="~/img/NorseraHoodie.png" class="card-img-top" alt=" ">
                                            <h5 class="card-title">@FirstProduct.Name</h5>
                                            <p class="card-text">@FirstProduct.Describiton</p>
                                            <small class="text-muted">
                                                <i class="fa fa-turkish-lira"></i>@FirstProduct.Price
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- Ürün Kartı 4 -->
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="~/img/NorseraHoodie.png" class="card-img-top" alt=" ">
                                            <h5 class="card-title">@secondProduct.Name</h5>
                                            <p class="card-text">@secondProduct.Describiton</p>
                                            <small class="text-muted">
                                                <i class="fa fa-turkish-lira"></i>@secondProduct.Price
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- Ürün Kartı 3 -->
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="~/img/NorseraHoodie.png" class="card-img-top" alt=" ">
                                            <h5 class="card-title">@FirstProduct.Name</h5>
                                            <p class="card-text">@FirstProduct.Describiton</p>
                                            <small class="text-muted">
                                                <i class="fa fa-turkish-lira"></i>@FirstProduct.Price
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- Ürün Kartı 4 -->
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="~/img/NorseraHoodie.png" class="card-img-top" alt=" ">
                                            <h5 class="card-title">@secondProduct.Name</h5>
                                            <p class="card-text">@secondProduct.Describiton</p>
                                            <small class="text-muted">
                                                <i class="fa fa-turkish-lira"></i>@secondProduct.Price
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#myCarousel').carousel({
            interval: 1000, // Otomatik geçiş süresi (ms)
            pause: false, // Fare üzerinde durma
        });
    });
</script>

</div>
