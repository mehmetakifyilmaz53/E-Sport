@model Norsera.Models.ProductDetailModel
<div class="card mb-3">
    <div class="card-boddy">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.Product.ImageUrl" class="card-img">
            </div>
            <div class="col-md-9">
                <h5 class="card-title">@Model.Product.Name</h5>
                @foreach ( var item in Model.Categories)
                {
                    <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
                    
                }
                
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>
            </div>
        </div>
    </div>
</div>
